<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainCourseActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout android:id="@+id/tab_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/background_light"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/main_progress"
                    android:layout_gravity="center"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/courses_data_layout"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Course"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/main_course_title"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_fragment_rv_main"
                    android:orientation="horizontal"
                    >

                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Side Dish"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/side_course_title"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_fragment_rv_side"
                    android:orientation="horizontal"
                    >
                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appetizers"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/appetizer_course_title"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_fragment_rv_appetizer"
                    android:orientation="horizontal"
                    >
                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Desserts"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/desserts_course_title"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/top_fragment_rv_dessert"
                    android:orientation="horizontal"
                    >
                </android.support.v7.widget.RecyclerView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>